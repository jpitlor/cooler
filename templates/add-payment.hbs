			<div class="card-body">
				<h5 class="card-title">Payee</h5>
				<div class="form-group">
					<div class="input-group-prepend">
						<label class="input-group-text" for="today-date">Date</label>
					</div>
					<input type="date" class="form-control" value="{{todayDate}}" id="today-date" readonly />
				</div>
				<div class="form-group">
					<label for="payee">Payee: </label>
					<input type="text" class="form-control" placeholder="Select Payee" readonly>
					<div class="input-group-append">
						<button class="btn btn-outline-secondary" type="button">Select</button>
					</div>
				</div>
				<!-- Payee -->
				<!-- Student org? -->
				<!-- Search -->
				<!-- Add -->
