<h1>Organizations</h1>
<div class="row">
	<div class="card col-md mx-3">
		<div class="card-body">
			<h5 class="card-title">Reminders</h5>
			<ul class="list-group">
				{{#each announcements}}
					<li class="list-group-item">{{this}}</li>
				{{/each}}
			</ul>
		</div>
	</div>

	<div class="card col-md mx-3">
		<div class="card-body">
			<h5 class="card-title">Your Information</h5>
			<ul class="list-group">
				{{#each myInfo}}
					<li class="list-group-item">
						<strong>{{@key}}:</strong> {{this}}
					</li>
				{{/each}}
			</ul>
			<a class="btn btn-raised btn-secondary">Edit</a>
		</div>
	</div>
</div>

<div class="card">
	<div class="card-body">
		<h5 class="card-title">Your Organizations</h5>
		<table class="table table-hover">
			<thead class="thead-light">
				{{#each orgs.columns}}
					<th scope="col">{{this}}</th>
				{{/each}}
			</thead>
			<tbody>
				{{#each orgs.content}}
					<tr>
						{{#each this}}
							<td>{{{this}}}</td>
						{{/each}}
					</tr>
				{{/each}}
			</tbody>
		</table>
		<input class="btn btn-raised  btn-secondary" type="button" value="Create PDF Summary"/>
	</div>
</div>