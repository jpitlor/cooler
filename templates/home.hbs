{{#unless theme.materialStyle}}<h1>Organizations</h1>{{/unless}}
<div class="row">
	{{#unless theme.hasSidebar}}
		<div class="card col-md mx-3">
			<div class="card-body">
				<h5 class="card-title">Reminders</h5>
				<ul {{#if theme.materialStyle}}class="list-group"{{/if}}>
					{{#each announcements}}
						<li class="{{#if ../theme.materialStyle}}list-group-item{{/if}}">
							{{this}}
						</li>
					{{/each}}
				</ul>
			</div>
		</div>
	{{/unless}}

	<div class="card col-md mx-3">
		<div class="card-body">
			<h5 class="card-title">Your Information</h5>
			<ul {{#if theme.materialStyle}}class="list-group"{{/if}}>
				{{#each myInfo}}
					<li {{#if ../theme.materialStyle}}class="list-group-item"{{/if}}>
						<strong>{{@key}}:</strong> {{this}}
					</li>
				{{/each}}
			</ul>
			<button class="btn btn-raised btn-secondary">Edit</button>
		</div>
	</div>
</div>

<div class="card">
	<div class="card-body">
		<h5 class="card-title">Your Organizations</h5>
		<table class="table table-hover">
			<thead class="thead-light">
				{{#each orgs.columns}}
					<th scope="col">{{this}}</th>
				{{/each}}
			</thead>
			<tbody>
				{{#each orgs.content}}
					<tr>
						{{#each this}}
							<td>{{{this}}}</td>
						{{/each}}
					</tr>
				{{/each}}
			</tbody>
		</table>
		<input class="btn btn-raised  btn-secondary" type="button" value="Create PDF Summary"/>
	</div>
</div>